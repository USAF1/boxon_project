@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-5">
    <div class="row">
        <div class="d-flex justify-content-between align-items-center ">
            <h1 class="mb-4">Multilingual Form</h1>
            <button class="btn btn-primary" id="add_block">Add Control Block</button>
            <button class="btn btn-secondary" id="submit">Submit</button>
        </div>
    </div>
    <form action="">
        <div class="container card" id="mainform">
        </div>
    </form>
</div>




<template id="form-content-block-template">
    <div class="form-content-block" data-block-id="">
        <div class="container">
            <div class="form-check mb-3">
                <input class="form-check-input" type="radio" name="langOption" id="langOptionEnglish" value="english" checked>
                <label class="form-check-label" for="langOptionEnglish">
                    Only English
                </label>
            </div>
            <div class="form-check mb-4">
                <input class="form-check-input" type="radio" name="langOption" id="langOptionEnglishArabic" value="english-arabic">
                <label class="form-check-label" for="langOptionEnglishArabic">
                    English & Arabic
                </label>
            </div>
            <div class="row">
                <div class="col-6">
                    <div id="englishControlBlocks">
                        <div class="froms">
                            <div class="">
                                <label>Name</label>
                                <input type="text" class="form-control" placeholder="Name" required>
                            </div>
                            <div class="">
                                <label>Email</label>
                                <input type="email" class="form-control" placeholder="Email" required>
                            </div>
                            <div class="">
                                <label>Phone</label>
                                <input type="tel" class="form-control" placeholder="Phone" required>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div id="arabicControlBlocks">
                        <div class="froms">
                            <div class="">
                                <label>Name</label>
                                <input type="text" class="form-control" placeholder="Name" >
                            </div>
                            <div class="">
                                <label>Email</label>
                                <input type="email" class="form-control" placeholder="Email" >
                            </div>
                            <div class="">
                                <label>Phone</label>
                                <input type="tel" class="form-control" placeholder="Phone" >
                            </div>

                        </div>
                    </div>
                </div>
                <button class="btn btn-sm btn-danger remove-block" data-block-id="" onclick="removeBlock(this.dataset.blockId)">Remove</button>
            </div>
        </div>
    </div>
</template>
